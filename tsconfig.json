{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2015",
    "moduleResolution": "Bundler",
    "lib": ["ES5"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "dist", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src/**/*"]
}
